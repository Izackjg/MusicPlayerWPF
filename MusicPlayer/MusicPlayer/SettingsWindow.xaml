<Window x:Class="MusicPlayer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="145" Width="254" Closed="Window_Closed" ResizeMode="CanMinimize">
    <Grid Height="84" VerticalAlignment="Top">
        <CheckBox x:Name="cbPreloadOnClick" Content="Preload on Click" Margin="10,17,10,0" VerticalAlignment="Top" Click="cbPreloadOnClick_Click"/>
        <Button x:Name="btnPreloadDir" Content="Default Preload Directory" Margin="10,44,10,0" VerticalAlignment="Top" Click="btnPreloadDir_Click"/>
        <Button x:Name="btnDefaultDir" Content="Default Open Directory" Margin="10,79,10,-15" VerticalAlignment="Top" Click="btnDefaultDir_Click"/>

    </Grid>
</Window>
